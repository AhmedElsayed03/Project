@page
@model Project.Presentation.Pages.Cart.AddProductToClientModel

<div class="container">
    <h2>Add Product to Client</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="ClientProductAdd.ClientId" class="control-label">Client Name</label>
            <select asp-for="ClientProductAdd.ClientId" class="form-control" asp-items="Model.ClientsList"></select>
            <span asp-validation-for="ClientProductAdd.ClientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientProductAdd.ProductId" class="control-label">Product Name</label>
            <select asp-for="ClientProductAdd.ProductId" class="form-control" asp-items="Model.ProductsList"></select>
            <span asp-validation-for="ClientProductAdd.ProductId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>